<MyLayout>
    FloatLayout:
        size:root.width,root.height

        Image:
            source: "projearkaplanresmi.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}
        Label:
            text:"Pong Game"
            font_size:40
            pos_hint:{'center_x': 0.5, 'center_y': 0.74}
        Button:
            text:"Start"
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            background_color: 0, 0.5, 1, 1
            on_press:root.start_pong_game()
        Button:
            text:"Highest Score"
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.37}
            background_color: 0, 0.5, 1, 1
        Button:
            text:"History"
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.24}
            background_color: 0, 0.5, 1, 1

